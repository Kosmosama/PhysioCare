{% extends "../../layouts/base.njk" %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">Edit Patient</h1>

    <form method="POST" action="/patients/{{ patient._id }}" enctype="multipart/form-data">
        
        {% include "../../partials/patient_form.part.njk" %}

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/patients/{{ patient._id }}" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>
{% endblock %}