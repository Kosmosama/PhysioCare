{% extends "../../layouts/base.njk" %}

{% block content %}
<h1>Add Physio</h1>

<form method="POST" action="/physios/" enctype="multipart/form-data">
    <div class="form-group">
        <label for="login">Login:</label>
        {% if errors.login %}
            <p class="text-danger">{{ errors.login }}</p>
        {% endif %}
        <input type="text" id="login" name="login" value="{{ physio.login }}" required>
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        {% if errors.password %}
            <p class="text-danger">{{ errors.password }}</p>
        {% endif %}
        <input type="password" id="password" name="password" required>
    </div>

    <div class="form-group">
        <label for="name">Name:</label>
        {% if errors.name %}
            <p class="text-danger">{{ errors.name }}</p>
        {% endif %}
        <input type="text" id="name" name="name" value="{{ physio.name }}" required>
    </div>

    <div class="form-group">
        <label for="surname">Surname:</label>
        {% if errors.surname %}
            <p class="text-danger">{{ errors.surname }}</p>
        {% endif %}
        <input type="text" id="surname" name="surname" value="{{ physio.surname }}" required>
    </div>

    <div class="form-group">
        <label for="specialty">Specialty:</label>
        {% if errors.specialty %}
            <p class="text-danger">{{ errors.specialty }}</p>
        {% endif %}
        <select id="specialty" name="specialty" required>
            <option value="Sports" {% if physio.specialty == "Sports" %}selected{% endif %}>Sports</option>
            <option value="Neurological" {% if physio.specialty == "Neurological" %}selected{% endif %}>Neurological</option>
            <option value="Pediatric" {% if physio.specialty == "Pediatric" %}selected{% endif %}>Pediatric</option>
            <option value="Geriatric" {% if physio.specialty == "Geriatric" %}selected{% endif %}>Geriatric</option>
            <option value="Oncological" {% if physio.specialty == "Oncological" %}selected{% endif %}>Oncological</option>
        </select>
    </div>

    <div class="form-group">
        <label for="licenseNumber">License Number:</label>
        {% if errors.licenseNumber %}
            <p class="text-danger">{{ errors.licenseNumber }}</p>
        {% endif %}
        <input type="text" id="licenseNumber" name="licenseNumber" value="{{ physio.licenseNumber }}" required>
    </div>

    <div class="form-group">
        <label for="image">Image:</label>
        <input type="file" class="form-control" name="image" />
    </div>

    <button type="submit" class="button">Save Changes</button>
</form>

<a href="/physios/{{ physio._id }}">Cancel</a>
{% endblock %}
