{% extends "../../layouts/base.njk" %}

{% block content %}
<h1>Physio Details</h1>

<table>
    {% if physio.image %}
    <tr>
        <th>Image</th>
        <td><img src="{{ physio.image }}" alt="Physio Image" /></td>
    </tr>
    {% endif %}
    <tr>
        <th>Name</th>
        <td>{{ physio.name }}</td>
    </tr>
    <tr>
        <th>Surname</th>
        <td>{{ physio.surname }}</td>
    </tr>
    <tr>
        <th>Specialty</th>
        <td>{{ physio.specialty }}</td>
    </tr>
    <tr>
        <th>License Number</th>
        <td>{{ physio.licenseNumber }}</td>
    </tr>
    {% if session and session.user and session.user.rol == 'admin' %}
        <tr>
            <th>Actions</th>
            <td>
                <a href="/physios/{{ physio._id }}/edit" class="button">Edit</a>
                <form method="POST" action="/physios/{{ physio._id }}" style="display: inline;">
                    <input type="hidden" name="_method" value="delete" />
                    <button type="submit" class="button danger">Delete</button>
                </form>
            </td>
        </tr>
    {% endif %}
</table>

<a href="/physios">Back to physio List</a>
{% endblock %}
